generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_ADDON_URI")
}

enum ProductKind {
  IA
  Dashboard
  Fichier
  API
  Cartographie
}

enum UserRole {
  superadmin
  admin
  dpo
  rssi
  daj
  instructor
}

model Request {
  id            Int         @id @default(autoincrement())
  references    Reference[] @relation("RequestReference")
  gristId       String
  requestFormId Int         @unique
  requestForm   RequestForm @relation(fields: [requestFormId], references: [id])
  userId        Int
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model RequestForm {
  id Int @id @default(autoincrement())
  firstName              String
  lastName               String
  emailPro               String
  role                   String
  ministry               String
  department             String
  subject                String
  description            String
  kind                   ProductKind @default(API)
  developmentManagement  String
  dataUpdateFrequency    String      @default("1 semaine")
  expectedProductionDate String
  personalData           String      @default("Oui")
  additionalFiles        String[]
  request                Request?
  createdAt              DateTime    @default(now())
  updatedAt              DateTime    @updatedAt
}

model Reference {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  kindProduct ProductKind
  supplierId  Int         @unique
  supplier    Supplier    @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  domain      String
  userId      Int
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  request     Request[]   @relation("RequestReference")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Supplier {
  id         Int         @id @default(autoincrement())
  name       String
  references Reference[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model User {
  id            Int         @id @default(autoincrement())
  name          String
  role          UserRole    @default(instructor)
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  requests      Request[]
  references    Reference[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        Int      @id @default(autoincrement())
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    Int       @id @default(autoincrement())
  accountId             String
  providerId            String
  userId                Int
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         Int       @id @default(autoincrement())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
