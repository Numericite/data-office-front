generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_ADDON_URI")
}

enum RequestStatus {
  pending
  under_instruction
  instructed
  validated
  closed
}

enum RequestReviewStatus {
  rssi
  dpo
  daj
}

enum RequestReviewState {
  open
  closed
}

model Request {
  id         Int             @id @default(autoincrement())
  status     RequestStatus   @default(pending)
  formData   Json
  yamlFile   String
  references Reference[]     @relation("RequestReference")
  userId     Int
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews    RequestReview[]
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@index([status])
}

model RequestReview {
  id         Int                 @id @default(autoincrement())
  status     RequestReviewStatus
  state      RequestReviewState  @default(open)
  content    String?
  reviewedAt DateTime            @default(now())
  requestId  Int
  request    Request             @relation(fields: [requestId], references: [id], onDelete: Cascade)
  reviewerId Int?
  reviewer   User?               @relation(fields: [reviewerId], references: [id], onDelete: Cascade)
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt

  @@index([status])
  @@index([requestId])
  @@index([reviewerId])
}

enum ProductKind {
  IA
  Dashboard
  Fichier
  API
  Cartographie
}

model Reference {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  kindProduct ProductKind
  supplierId  Int         @unique
  supplier    Supplier    @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  domain      String
  userId      Int
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  request     Request[]   @relation("RequestReference")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Supplier {
  id         Int         @id @default(autoincrement())
  name       String
  references Reference[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

enum LegalWorkProcessing {
  general_legal_framework  @map("Cadre légal général")
  specific_legal_framework @map("Cadre légal spécifique")
  deliberation             @map("Délibération")
  none                     @map("Aucun - demande décret DNUM")
  sufficient_decree        @map("Décret suffisant")
  insufficient_decree      @map("Décret insuffisant - révision nécessaire")
}

model User {
  id            Int             @id @default(autoincrement())
  name          String
  role          UserRole        @default(instructor)
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  requests      Request[]
  reviews       RequestReview[]
  references    Reference[]

  @@unique([email])
  @@map("user")
}

enum UserRole {
  superadmin
  admin
  dpo
  rssi
  daj
  instructor
}

model Session {
  id        Int      @id @default(autoincrement())
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    Int       @id @default(autoincrement())
  accountId             String
  providerId            String
  userId                Int
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         Int       @id @default(autoincrement())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
